<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_lu"
                android:gravity="bottom|right"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/buttonButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_u"
                android:textSize="30.0sp" />

            <Button
                android:id="@+id/buttonButton3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_ru"
                android:gravity="bottom|left"
                android:textSize="18.0sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonButton4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_l"
                android:textSize="30.0sp" />

            <Button
                android:id="@+id/buttonButton5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_s"
                android:textSize="30.0sp" />

            <Button
                android:id="@+id/buttonButton6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_r"
                android:textSize="30.0sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonButton7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_ld"
                android:gravity="top|right"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/buttonButton8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_d"
                android:textSize="30.0sp" />

            <Button
                android:id="@+id/buttonButton9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/be_rd"
                android:gravity="top|left"
                android:textSize="18.0sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/mainButton1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#00000000"
        android:text="" />

</RelativeLayout>

